case $# in
0) echo "Usage: rmlock commandname"; exit 1;;
1) ;;
*) echo "Usage: rmlock commandname"; exit 1;;
esac
echo "Are you sure that there is no $1 process active at the moment? (y/n)"
read answ
if [ $answ = "y" ]
then
echo "OK, I will remove the lock, but.....the consequences are for you, $USER!!"
else exit
fi
echo "...."
case $1 in
modify) rm -f $RBS_USER_ROOT$RBS_USER$RBS_RELEASE/modify*.rbs ;;
build) rm -f $RBS_USER_ROOT$RBS_USER$RBS_RELEASE/build.rbs 
       chmod 777 $RBS_ARCHIVE$RBS_RELEASE/build*.rbs 2> /dev/null
       rm -f $RBS_ARCHIVE$RBS_RELEASE/build*.rbs 2> /dev/null;;
consolidate) chmod 777 $RBS_ARCHIVE$RBS_RELEASE/cons.rbs 2> /dev/null
       rm -f $RBS_ARCHIVE$RBS_RELEASE/cons.rbs 2> /dev/null;;
free) rm -f $RBS_USER_ROOT$RBS_USER$RBS_RELEASE/free.rbs;;
grab) rm -f $RBS_USER_ROOT$RBS_USER$RBS_RELEASE/grab.rbs;;
integrate)  rm -f $RBS_USER_ROOT$RBS_USER$RBS_RELEASE/integrate.rbs;;
*) echo "RMLOCK: Use modify, build, consolidate, free, grab or integrate!";;
esac

echo "All $1 locks have been removed"
