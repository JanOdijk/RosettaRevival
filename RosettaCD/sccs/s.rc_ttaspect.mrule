% RULE Raspectimperfective
< m1:CLAUSE{CLAUSErec1}
           [mu1,
            predrel/VERBP{VERBPrec1}
                   [mu2,
                    rel1/VERB{VERBrec1}[mu3]
                   ]
           ] 
>

< m :CLAUSE{CLAUSErec2}
           [mu1,
            predrel/VERBP{VERBPrec1}
                   [mu2,
                    rel1/VERB {VERBrec1}[mu3]
                   ]
            ]
>
      COMP
         <
          C1: CLAUSErec1.aspect = omegaaspect
          A1: CLAUSErec2 := CLAUSErec1;
              CLAUSErec2.aspect := imperfective;
         >

      DECOMP
         <
          C1: CLAUSErec2.aspect = imperfective
          A1: CLAUSErec1 := CLAUSErec2;
              CLAUSErec1.aspect := omegaaspect;
         >

&

