\begin{verbatim}
%
% TRANSFORMATION TNPoverADv1
< m1:CLAUSE{CLAUSErec1}
           [ I1:mu1,
             I2:mu2,
             predrel/VERBP{VERBPrec1}
                    [ I3:mu3,
                      I4:rel1/T2,
                      I5:mu4 
                    ],
             mu5 
           ]
>

< m :CLAUSE{CLAUSErec2}
           [ I1:mu1,
             I6:preadvrel/T2,
             I2:mu2,
             predrel/VERBP{VERBPrec1}
                    [ I3:mu3,
                      I5:mu4 
                    ],
             mu5 
           ]
>

   MATCHCONDITIONS
      <
       I1 : ALL(mu1, I11:rel2/..)
       I2 : NOT EXIST(mu2,[I11:rel2/..]) AND NOT EXIST(mu2, [preadvrel/..])
       I3 : ALL(mu3, I13:rel3/..)
       I4 : rel1 IN [objrel, indobjrel,argrel] AND
            (T2.CAT IN [NPVAR] WITH T2.REC.NPhead IN [datNP,ditNP,dieNP,
                    persproNP, otherNP, allesNP, ietsNP, elkaarNP])
       I5 : NOT EXIST(mu4,[I13:rel3/..]) 
       I6 : T2.CAT IN [NPVAR]
       I11: rel2 IN AUX_preerposrels
       I13: rel3 IN AUX_insidevpadvrels
      >

      COMP
         <
          C1: rel1 = objrel AND CLAUSErec1.synvpefs * 
                                 (AUX_objvps + [synzijn]) <> [] AND
              NOT EXIST(mu4, [indobjrel/..])                          
          A1: CLAUSErec2 := CLAUSErec1;
              CLAUSErec2.synvpefs := CLAUSErec1.synvpefs * 
                                          (AUX_objvps + [synzijn]) ;
          C2: rel1 = indobjrel AND CLAUSErec1.synvpefs * AUX_indobjvps <> []
          A2: CLAUSErec2 := CLAUSErec1;
              CLAUSErec2.synvpefs := CLAUSErec1.synvpefs * AUX_indobjvps;
          C3: rel1 = argrel AND CLAUSErec1.synvpefs * AUX_VRvps <> [] AND
              NOT EXIST(mu4, [indobjrel/..])                          AND
              NOT EXIST(mu4, [objrel/..])                          
          A3: CLAUSErec2 := CLAUSErec1;
              CLAUSErec2.synvpefs := CLAUSErec1.synvpefs * AUX_VRvps;

         > 

      DECOMP
         <
          C1: CLAUSErec2.synvpefs * (AUX_objvps  + [synzijn]) <> [] AND
              NOT EXIST(mu4, [indobjrel/..])                          
          A1: rel1 := objrel;
              CLAUSErec1 := CLAUSErec2;
              CLAUSErec1.synvpefs := CLAUSErec2.synvpefs * 
                                          (AUX_objvps + [synzijn]);
          C2: CLAUSErec2.synvpefs * AUX_indobjvps <> [] 
          A2: rel1 := indobjrel;
              CLAUSErec1 := CLAUSErec2;
              CLAUSErec1.synvpefs := CLAUSErec2.synvpefs * AUX_indobjvps;
          C3: CLAUSErec2.synvpefs * AUX_VRvps <> [] AND
              NOT EXIST(mu4, [indobjrel/..])        AND
              NOT EXIST(mu4, [objrel/..])                          
          A3: rel1 := argrel;
              CLAUSErec1 := CLAUSErec2;
              CLAUSErec1.synvpefs := CLAUSErec2.synvpefs * AUX_VRvps;
         >


&

\end{verbatim}

