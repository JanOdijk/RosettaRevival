case $# in
0) echo "Usage: targets componentname [\"pattern\"] "; exit 1;;
1) ;;
2) ;;
3) ;;
*) echo "Usage: targets componentname [\"pattern\"] "; exit 1;;
esac
savedir=`pwd`
cd $RBS_USER_ROOT$RBS_USER$RBS_RELEASE
trap 'cd $savedir; exit 1' 0
if ( test "$1" = actions )
then
     echo "TARGETS: component actions has no targets, it should only contain scripts"
else
     cd $1/target
     ls $3 $2 2> /dev/null
fi
cd $savedir
trap 0
