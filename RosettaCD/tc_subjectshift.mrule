% TRANSFORMATION TSubjectshift1
< m1:I2::CLAUSE{CLAUSErec1}
           [ I4:sig1,
             I3:subjrel/T1,
             I1:mu1 
           ]
>

< m :I2::CLAUSE{CLAUSErec1}
           [ I4:sig1,
             I3:shiftrel/T1,
             I1:mu1 
           ]
>

   MATCHCONDITIONS
      <
       I1: NOT EXIST(mu1, [subjrel/..]) AND
           (EXIST(mu1,[postsubjrel/..]) -> 
            (T1.CAT IN [NP] WITH T1.REC.NPhead IN [ecNP])
           )
       I2: CLAUSErec1.finiteness = finite
       I3: T1.CAT IN [NP] WITH T1.REC.mood = declxpmood
       I4: ALL(sig1, leftdislocrel/I41::SENTENCE{SENTENCErec1}[mu2])
           I41: SENTENCErec1.adverbial = false
      >

      COMP
         <
          C1: Nominative IN T1.REC.cases 
          A1: @
         >
      DECOMP
         <
          C1: Nominative IN T1.REC.cases 
          A1: @
         >



