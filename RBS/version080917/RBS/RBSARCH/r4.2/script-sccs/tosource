#! /bin/sh -e
#
case $# in
0) echo "Usage: tosource componentname filename"; exit 1;;
1) echo "Usage: tosource componentname filename"; exit 1;;
2) ;;
*) echo "Usage: tosource componentname filename"; exit 1;;
esac
savedir=`pwd`
cd $RBS_USER_ROOT$RBS_USER$RBS_RELEASE/$1
# 
if ( test -s $RBS_USER_ROOT$RBS_USER$RBS_RELEASE/lock.rbs ) 
then echo "WARNING: You are building, do you want me to continue ? (y/n)"
     read x
     if ( test "$x" = "y" ) 
     then mv save/$2 source
     fi 
else mv save/$2 source
fi
#
cd $savedir
