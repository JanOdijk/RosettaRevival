% TRANSFORMATION Tsubjectshift2
< m1:CLAUSE{CLAUSErec1}
           [ I5:sig1,
             I1:mu1,
             erposrel/I3::RADVP{RADVPrec1}[mu3],
             I2:mu2
           ]
>

< m :CLAUSE{CLAUSErec1}
           [ I5:sig1,
             shiftrel/I4::RADVP{RADVPrec2}[mu3],
             I1:mu1,
             I2:mu2
           ]
>

   MATCHCONDITIONS
      <
       I1 : ALL(mu1, I11:rel1/..)
       I2 : NOT EXIST(mu2, [I12:rel2/..]) AND NOT EXIST (mu2, [erposrel/..])
       I3 : RADVPrec1.kindefs * [Xk, XLk, XPk] <> []
       I4 : RADVPrec2.kindefs * [Xk, XLk, XPk] <> []
       I5 : ALL(sig1, leftdislocrel/I51::SENTENCE{SENTENCErec1}[mu4])
            I51:SENTENCErec1.adverbial = false 
       I11: rel1 IN (AUX_preerXposrels+[reflrel]) AND rel1 <> leftdislocrel
       I12: rel2 IN (AUX_preerXposrels+[reflrel]) 
      >

      COMP
         <
          C1: true
          A1: RADVPrec2 := RADVPrec1;
              RADVPrec2.kindefs := RADVPrec1.kindefs * [Xk, XLk, XPk];
         >
      DECOMP
         <
          C1: true
          A1: RADVPrec1 := RADVPrec2;
              RADVPrec1.kindefs := RADVPrec2.kindefs * [Xk, XLk, XPk];
         >


&

\end{verbatim}

